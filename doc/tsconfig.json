{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ESNext"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "paths": {
      "table-tool-*": [
        "../packages/*/src"
      ],
      "@demo/vue": [
        "demo/vue/index.ts"
      ]
    }
  },
  "include": [".vitepress/**/*","src/**/*"]
}